<%= form_for(@quote, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @quote.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@quote.errors.count, "error") %> prohibited this quote from being saved:</h4>

      <ul>
        <% @quote.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :author_id, 'Auteur', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :author_id, Author.all.collect { |p| [ p.name, p.id ] }, {}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content, 'Quote', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Quote opslaan", class: "btn btn-primary" %>
      <%= link_to "Annuleren", quotes_path, class: 'btn btn-default'%>
    </div>
  </div>
<% end %>